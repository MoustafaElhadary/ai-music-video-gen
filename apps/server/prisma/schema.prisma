datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Book {
  id        String   @id @default(cuid())
  name      String
  author    String
  rating    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GenerationRequest {
  id            String        @id @default(cuid())
  userId        String // Added this line
  occasion      String
  recipientName String
  prompt        String
  senderName    String
  status        RequestStatus @default(STARTED)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

enum RequestStatus {
  STARTED
  FILLED
  PAID
  PROCESSING
  COMPLETED
  FAILED
}
