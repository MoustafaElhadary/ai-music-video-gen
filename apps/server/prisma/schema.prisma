datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Book {
  id        String   @id @default(cuid())
  name      String
  author    String
  rating    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GenerationRequest {
  id                   String        @id @default(cuid())
  userId               String
  occasion             String
  recipientName        String
  prompt               String
  senderName           String
  status               RequestStatus @default(STARTED)
  sunoSongId           String?
  sunoAudioUrl         String?
  srt                  String?
  isRTL                Boolean?
  language             String?
  duration             Int?
  sunoLyrics           String?
  localVideoPath       String?
  finalVideoPath       String?
  recipientPhoneNumber String?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  videoImages          VideoImage[]
}

model VideoImage {
  id                  String            @id @default(cuid())
  photoId             String
  generationRequest   GenerationRequest @relation(fields: [generationRequestId], references: [id])
  generationRequestId String
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
}

enum RequestStatus {
  STARTED
  FILLED
  PAID
  AUDIO_PROCESSING
  AUDIO_PROCESSED

  SUBTITLE_PROCESSING
  SUBTITLE_PROCESSED
  SUBTITLE_FAILED

  IMAGE_PROCESSING
  IMAGE_PROCESSED
  IMAGE_FAILED

  VIDEO_PROCESSING
  VIDEO_PROCESSED
  VIDEO_FAILED

  UPLOADING
  UPLOADED
  UPLOAD_FAILED

  COMPLETED
  FAILED
}
